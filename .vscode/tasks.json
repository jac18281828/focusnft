{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "install",
      "type": "shell",
      "command": "yarn install --dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "prettier",
      "type": "shell",
      "command": "yarn prettier:check",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "install",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "hint",
      "type": "shell",
      "command": "yarn hint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "prettier",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "forge build --sizes",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",      
      "group": {
        "kind": "build",
        "isDefault": true,
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "forge test -vvv",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "hint",      
      "group": {
        "kind": "test",
        "isDefault": true,
      }
    },
  ]
}